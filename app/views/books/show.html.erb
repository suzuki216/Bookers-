<div class="notice"><%= flash[:notice] %></div>

<div class="book-data">
  <div class="field">
    <p class="title-text"><strong>Title:</strong> <%= @book.title %></p>
  </div>

  <div class="field">
    <p class="body-text"><strong>Body:</strong> <%= @book.body %></p>
  </div>

  <div class="actions">
    <%= link_to "Edit", edit_book_path(@book.id), class: "btn edit-btn" %> |
    <%= link_to "Back", books_path, class: "btn" %>
  </div>
</div>
