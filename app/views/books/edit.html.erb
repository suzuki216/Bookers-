<div class="edit-container">
  <h1>Editing Book</h1>

  <% if @book.errors.any? %>
    <div class="error-messages">
      <p><%= @book.errors.count %> errors prohibited this book from being saved:</p>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_with model: @book, local: true do |f| %>
    <div class="form-group">
      <h4>Title</h4>
      <%= f.text_field :title, class: "input-field" %>
    </div>

    <div class="form-group">
      <h4>Body</h4>
      <%= f.text_area :body, class: "textarea-field" %>
    </div>

    <div class="form-actions">
      <%= f.submit 'Update Book', class: "btn" %>
    </div>

    <div class="nav-links">
      <%= link_to "Show", book_path(@book), class: "link" %> |
      <%= link_to "Back", books_path, class: "link" %>
    </div>
  <% end %>
</div>

