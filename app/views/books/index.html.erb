<div class="notice"><%= flash[:notice] %></div>
<h2>Books</h2>
<table>
  <thead>
    <tr>
      <th class="table-heading">Title</th>
      <th class="table-heading">Body</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td class="table-title"><%= book.title %></td>
        <td class="table-body"><%= book.body %></td>
        <td><%= link_to "Show", book_path(book), class: "action-3" %></td>
        <td><%= link_to "Edit", edit_book_path(book), class: "action-3" %></td>
        <td><%= link_to "Destroy", book_path(book), method: :delete, "data-confirm" => "Are you sureï¼Ÿ", class: "action-3" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="form">
  <h3>New Book</h3>
  <% if @book.errors.any? %>
    <%= @book.errors.count %> errors prohibited this book from being saved:
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <%= form_with model: @book, local: true do |f| %>
    <h5>Title</h5>
    <div class="field-2"><%= f.text_field :title %></div>

    <h5>Body</h5>
    <div class="area"><%= f.text_area :body %></div>

    <div class="create"><%= f.submit 'Create Book' %></div>
  <% end %>
</div>



